<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    
    <div class="navbar-header">
      <%= link_to 'Imgur v2', root_path, class: 'pull-left title' %>
    </div>

    
    <ul class="nav navbar-nav pull-right">
      <% if user_signed_in? %>
        <li><%= link_to "Users", users_path %></li>
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">
            <%= current_user.name %>
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to 'Profile', current_user %></li>
            <li><%= link_to 'Update Account', edit_user_registration_path %></li>
            <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
          </ul>
        </li>
      <% else %>
        <li><%= link_to 'Log In', new_user_session_path %></li>
        <li><%= link_to 'Sign Up', new_user_registration_path %></li>
      <% end %>
    </ul>
    
        
    <% if user_signed_in? %>
        <%= form_tag(users_path(:id), :method => "get", id: "search-form", class: "form-inline") do %>
          <%= button_tag "Search", class: "btn btn-success pull-right fix-padding"%>
          <%= text_field_tag :search, params[:search], placeholder: "Search Users", class: "pull-right form-control fix-padding" %>

        <% end %>
    <% end %>
  
  </div>
</header>