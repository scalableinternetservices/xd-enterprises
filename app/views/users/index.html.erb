<% provide(:title, 'All users') %>

<%= will_paginate %>

<div class="container card-3 bot-padding">
  <h1>All users</h1>

  <ul class="users">
    <% @users.each do |user| %>
      <li>
        <%= gravatar_for user, size: 50 %>
        <%= link_to user.name, user %>
      </li>
    <% end %>
  </ul>
  
</div>

<%= will_paginate %>